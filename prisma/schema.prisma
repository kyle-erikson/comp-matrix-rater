generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model attribute {
  id          Int          @id @default(autoincrement())
  name        String
  key_area_id Int
  key_area    key_area     @relation(fields: [key_area_id], references: [id])
  competency  competency[]
}

model competency {
  id                     Int                      @id @default(autoincrement())
  name                   String
  attribute_id           Int?
  attribute              attribute?               @relation(fields: [attribute_id], references: [id])
  competency_description competency_description[]
  rating                 rating[]
}

model competency_description {
  id            Int        @id @default(autoincrement())
  description   String
  competency_id Int
  level_id      Int
  core          Boolean?   @default(false)
  competency    competency @relation(fields: [competency_id], references: [id])
  level         level      @relation(fields: [level_id], references: [id])
}

model key_area {
  id        Int         @id @default(autoincrement())
  name      String
  matrix_id Int
  matrix    matrix      @relation(fields: [matrix_id], references: [id])
  attribute attribute[]
}

model level {
  id                     Int                      @id @default(autoincrement())
  name                   String
  scope                  String?
  matrix_id              Int
  matrix                 matrix                   @relation(fields: [matrix_id], references: [id])
  competency_description competency_description[]
  user                   user[]
}

model matrix {
  id            Int             @id @default(autoincrement())
  name          String
  key_area      key_area[]
  level         level[]
  matrix_report matrix_report[]
}

model rating {
  id               Int           @id @default(autoincrement())
  competency_id    Int
  user_id          Int
  rating           Int
  notes            String?
  matrix_report_id Int
  competency       competency    @relation(fields: [competency_id], references: [id])
  matrix_report    matrix_report @relation(fields: [matrix_report_id], references: [id])
  user             user          @relation(fields: [user_id], references: [id])
}

model user {
  id            Int             @id @default(autoincrement())
  name          String
  email         String?
  manager_id    Int?
  level_id      Int?
  level         level?          @relation(fields: [level_id], references: [id])
  matrix_report matrix_report[]
  rating        rating[]
}

model matrix_report {
  id        Int      @id @default(autoincrement())
  matrix_id Int
  user_id   Int
  matrix    matrix   @relation(fields: [matrix_id], references: [id])
  user      user     @relation(fields: [user_id], references: [id])
  rating    rating[]
}
